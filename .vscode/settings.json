{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "search.exclude": {
    ".awcache": true,
    "**/dist": false,
    "**/node_modules": true,
    "**/out": false,
    "app/test/fixtures": true,
    "vendor": true
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": false,
    "**/out": true,
    ".awcache": true,
    ".eslintcache": true
  },
  "files.insertFinalNewline": true,
  "editor.tabSize": 2,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es1",
  "editor.formatOnSave": true,
  "eslint.options": {
    "configFile": ".eslintrc.yml",
    "rulePaths": ["eslint-rules"]
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
